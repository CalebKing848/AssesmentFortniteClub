@model FortniteEmpire.Models.NewsPost

<article class="blog-post">
    <h1>
        @Html.ActionLink(Model.Title, "Post", "News",
            new { year = Model.Posted.Year, month = Model.Posted.Month, key = Model.Key }
        )
    </h1>
    <div class="details">
        Posted <span>@Model.Posted</span> by <span>@Model.Author</span>
    </div>
    <div class="content">
        @Model.Body
    </div>
</article>